@model  Mtg.Web.Models.AuthModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<div class="ui segment">
    @using(Html.BeginForm("Register", "Auth", new {ViewBag.ReturnUrl}, FormMethod.Post, new {role = "form", @class = "ui form"}))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new {})
        <div class="field">
            @Html.LabelFor(m => m.UserName, new {})
            @Html.TextBoxFor(m => m.UserName, new {placeholder = "Username"})
        </div>
        <div class="field">
            @Html.LabelFor(m => m.Email, new {})
            @Html.TextBoxFor(m => m.Email, new {placeholder = "Email"})
        </div>
        <div class="field">
            @Html.LabelFor(m => m.Password, new {})
            @Html.PasswordFor(m => m.Password, new {placeholder = "********"})
        </div>
        <div class="field">
            @Html.LabelFor(m => m.ConfirmPassword, new {})
            @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder = "********"})
        </div>
        <button class="ui button" type="submit">Register</button>
        <hr />
        @Html.ActionLink("Back", "Login")
    }
</div>